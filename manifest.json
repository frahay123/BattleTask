{
  "manifest_version": 3,
  "name": "BattleTask",
  "version": "1.0",
  "description": "Track your productive vs. non-productive screen time with real-time AI analysis",
  "permissions": [
    "notifications",
    "tabs",
    "windows",
    "storage",
    "alarms",
    "idle",
    "webNavigation",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://battletask-yqkrjdcnrq-uc.a.run.app/*",
    "https://battletask-279027565964.us-central1.run.app/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "icons": {
    "16": "icons/prod16.png",
    "32": "icons/prod32.png",
    "48": "icons/prod48.png",
    "128": "icons/prod128.png",
    "orange16": "icons/orange16.png",
    "orange32": "icons/orange32.png",
    "orange48": "icons/orange48.png",
    "orange128": "icons/orange128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/prod16.png",
      "32": "icons/prod32.png",
      "48": "icons/prod48.png",
      "128": "icons/prod128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://*.youtube.com/*", "*://*.youtu.be/*"],
      "js": ["youtube-observer.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["config.js"],
      "matches": ["<all_urls>"]
    }
  ]
}